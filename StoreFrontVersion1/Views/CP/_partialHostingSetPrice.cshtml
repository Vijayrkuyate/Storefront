@model IEnumerable<ModelView.ProductHosting>

<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr style="color: white;background-color: #030358;">

            <th style="width: 20px;">Image</th>

            <th>Product Name</th>
            <th>Price</th>
            <th>Cost Price</th>
            <th>Selling Price</th>
            <th>Domain</th>

            <th>Transfer</th>
            <th>Email Account</th>
            <th> Databases Size</th>

            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr style="background-color:white">
                @*<td>@item.RegistrationDate</td>*@
                <td>
                    <div class="pull-left image">
                        <img src="~/Documents/ProductImage/@item.ProductImage" class="img-circle" alt="User Image" style="height: 47px;">
                    </div>
                </td>


                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.CostPrice</td>
                <td>@item.SellingPrice</td>
                <td>@item.DomainSize</td>

                <td>@item.TransferSize</td>
                <td>@item.EmailAccount</td>
                <td>@item.DatabaseSize</td>

                <td align="center">
                    <a class="btn btn-danger btn-sm" href="@Url.Action("AddHosting","Product",new { ProductId=item.HostintProductId})">
                        <i class="fa fa-eye">
                        </i>

                    </a>

                </td>
            </tr>
        }





    </tbody>
    <tfoot>
        <tr></tr>
    </tfoot>
</table>
