                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
            var d = loadData("@Url.Action("_OrderCPLst", "Partner")", data)
            $('#CPOrderDtl').html(d);
            $("#example1").dataTable();
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
    });

</script>
