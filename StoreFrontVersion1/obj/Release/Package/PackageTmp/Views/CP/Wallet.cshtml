<script type="text/javascript">
    debugger;
  
    var d = loadData("@Url.Action("_WalletAmount", "CP")")
    $('#walletAmt').html(d);
    var d = loadData("@Url.Action("_OrderCPLst", "CP")")
    $('#CPOrderDtl').html(d);
    $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
            "bPaginate": true,
